
<!-- user can edit their profile with these links -->
<div id="left">

<% if current_user %>
	<h2> Edit Profile</h2>

	<a href="/edit"><button>Change Password</button></a>
	<a href="/edit"><button>Delete Button</button>
	</a>

<% end %>
	
	<h2><%= @user.fname + " " + @user.lname %></h2>
	<p><%= @user.username %></p>
	
	<h3>Other Users to follow</h3>
	
	<% User.all.each do |u| %>
		<ul>
			<% :id == @user.id%>
				<li><a href="/users/:id"><%= u.username %></a></li>	
		</ul>
	<% end %>

	<ul>
		<li><h4>Followers</h4></li>
		<li><h4>Following</h4></li>
		<li><h4>Groups</h4></li>
	</ul>
	
</div>

<div id="middle">
	<form method="POST" action="/new-post">
		<label for="title">Title</label>
		<input name="title" type="text"></input>
		<label for="body">What are you thinking?</label>
		<textarea name="body"></textarea>
		
		<input type="submit">
	</form>
</div>

<div id="right">
	
	<% @posts.each do |p| %>
		<h4><%= p.title%></h4>
		<p><%= p.body%></p>
	<% end %>


</div>


